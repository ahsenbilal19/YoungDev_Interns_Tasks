  <header>
    <h1>Interactive Web Page</h1>
    <div class="dropdown">
      <button class="dropbtn" onclick="toggleDropdown()">Menu â–¼</button>
      <div class="dropdown-content" id="dropdownMenu">
        <a href="#">Home</a>
        <a href="#">About</a>
        <a href="#">Contact</a>
      </div>
    </div>
  </header>

  <div class="container">
    <h2>Welcome!</h2>
    <p>Click the button below to open a modal popup:</p>
    <button onclick="openModal()">Open Modal</button>
  </div>


  <div id="myModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>Hello!</h2>
      <p>This is a simple modal popup. Click the X to close.</p>
    </div>
  </div>

  <footer style="text-align:center; background:#004466; color:white; padding:15px;">
    <p>&copy; Task2 Interactive Design</p>
  </footer>

  <script>

    function toggleDropdown() {
      const menu = document.getElementById("dropdownMenu");
      menu.style.display = (menu.style.display === "block") ? "none" : "block";
    }


    function openModal() {
      document.getElementById("myModal").style.display = "block";
    }

    function closeModal() {
      document.getElementById("myModal").style.display = "none";
    }

    window.onclick = function(event) {
      const modal = document.getElementById("myModal");
      if (event.target === modal) {
        modal.style.display = "none";
      }
    }
  </script>

</body>
